{
  "name": "bridit/bifrost-database",
  "description": "Laravel Database with some add-ons out of the box",
  "keywords": [
    "bridit",
    "bifrost",
    "database",
    "eloquent",
    "orm"
  ],
  "homepage": "https://github.com/bridit/bifrost-database",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Gustavo Siqueira",
      "email": "gus@brid-it.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/database": "^8.0",
    "illuminate/support": "^8.0",
    "ramsey/uuid": "^4.0",
    "spatie/laravel-schemaless-attributes": "^2.0"
  },
  "require-dev": {
    "mockery/mockery": "^1.3",
    "phpunit/phpunit": "^9.1"
  },
  "autoload": {
    "psr-4": {
      "Bifrost\\Database\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bifrost\\Database\\Tests\\": "tests"
    },
    "files": []
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
